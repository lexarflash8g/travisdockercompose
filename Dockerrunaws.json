{

    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
      {
       "name": "client",
       "image": "lexarflash8g/multi-cient",
       "hostname": "client",
       "essential": false,
       "memory": 128

      },

      {
        "name":"server",
        "image": "lexarflash8g/multi-server",
        "hostname": "api",
        "essential": false,
        "memory": 128

      },

    {

        "name": "worker",
        "image": "lexarflash8g/multi-worker",
        "hostname": "worker",
        "essential": false,
        "memory": 128
    },
     {

        "name": "nginx",
        "image": "lexarflash8g/nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }

        ],
        "links": ["client", "server"],
        "memory": 128

     }
    ]

}